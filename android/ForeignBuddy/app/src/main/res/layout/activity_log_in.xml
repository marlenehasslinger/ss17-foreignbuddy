<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hdm_stuttgart.foreignbuddy.Activities.LogInActivity"
    android:background="@drawable/background2"
    android:screenOrientation="portrait">

    <EditText
        android:id="@+id/txt_email_login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:layout_marginTop="166dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txt_password_login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txt_email_login"
        android:layout_alignStart="@+id/txt_email_login" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:text="Log In"
        android:onClick="btn_login_login_clicked"
        android:layout_below="@+id/txt_password_login"
        android:background="@drawable/button_login"
        android:layout_alignEnd="@+id/txt_password_login"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@+id/txt_password_login" />

    <Button
        android:id="@+id/btn_register_login"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:background="@drawable/buttons"
        android:textColor="#ffca00"
        android:onClick="btn_register_clicked"
        android:text="Register Now"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_login_login"
        android:layout_alignEnd="@+id/btn_login_login" />

    <ImageView
        android:id="@+id/Logo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cropToPadding="false"
        android:saveEnabled="false"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/txt_password_login"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
