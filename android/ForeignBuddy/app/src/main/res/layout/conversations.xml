<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_user_conversation"
        android:src="@drawable/user_male"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_name_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Max Mustermann"
        android:textStyle="bold"
        android:layout_alignTop="@+id/img_user_conversation"
        android:layout_toEndOf="@+id/img_user_conversation"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/txt_lastMassage_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_user_conversation"
        android:layout_alignStart="@+id/txt_name_conversation"
        android:text="last Message" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_name"
        android:layout_alignTop="@+id/txt_name_conversation"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"/>


</RelativeLayout>