<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:nestedScrollingEnabled="false"
        app:srcCompat="@drawable/user_male"/>

    <TextView
        android:id="@+id/txt_name_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Max Mustermann"
        android:textStyle="bold"
        android:layout_above="@+id/txt_location_matches"
        android:layout_toEndOf="@+id/img_user"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/txt_location_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stuttgart (5km)"
        android:layout_alignBottom="@+id/img_user"
        android:layout_alignStart="@+id/txt_name_matches" />

    <TextView
        android:id="@+id/txt_language_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Englisch"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/img_location_matches"
        android:layout_toEndOf="@+id/img_location_matches" />

    <ImageView
        android:id="@+id/img_location_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_location_matches"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/txt_location_matches"
        android:adjustViewBounds="true"
        android:maxHeight="15dp"
        android:maxWidth="15dp"
        android:nestedScrollingEnabled="false"
        app:srcCompat="@drawable/location" />

    <Button
        android:id="@+id/btn_chat_matches"
        style="@android:style/Widget.DeviceDefault.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Chat"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/txt_name_matches"
        android:layout_alignBottom="@+id/txt_name_matches"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
