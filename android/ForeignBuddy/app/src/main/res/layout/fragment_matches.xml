<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hdm_stuttgart.foreignbuddy.MatchesFragment">


    <Button
        android:id="@+id/btn_setName_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Name"
        android:onClick="btn_setName_matchesClicked"/>

    <EditText
        android:id="@+id/txt_setName_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_matches"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/btn_setName_matches"
        android:ems="10"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/list_matches"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_setName_matches" />

</RelativeLayout>
