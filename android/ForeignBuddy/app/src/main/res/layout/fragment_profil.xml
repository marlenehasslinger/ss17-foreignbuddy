<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hdm_stuttgart.foreignbuddy.ProfilFragment">

    <!-- TODO: Update blank fragment layout -->




    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageView"
        android:src="@drawable/user_male"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btn_LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="#e73f3f"
        android:textColor="#FFFFFFFF"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:id="@+id/btn_takePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:layout_alignBaseline="@+id/btn_choosePhoto"
        android:layout_alignBottom="@+id/btn_choosePhoto" />

    <Button
        android:id="@+id/btn_uploadPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/btn_choosePhoto"
        android:layout_alignBottom="@+id/btn_choosePhoto"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_choosePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Photo"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/txt_userName" />

    <TextView
        android:id="@+id/txt_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="20"
        android:text="Username"
        android:textSize="20sp"
        android:layout_below="@+id/btn_uploadPhoto"
        android:layout_alignStart="@+id/btn_LogOut" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Username:"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/txt_userName"
        android:layout_alignBottom="@+id/txt_userName"
        android:layout_alignStart="@+id/btn_takePhoto" />


</RelativeLayout>
