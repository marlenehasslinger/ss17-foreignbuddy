<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hdm_stuttgart.foreignbuddy.ProfilFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageView"
        android:src="@drawable/user_male"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btn_takePhoto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txt_location_user"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btn_choosePhoto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Choose Photo"
        android:layout_below="@+id/btn_takePhoto"
        android:layout_alignStart="@+id/btn_takePhoto" />

    <TextView
        android:id="@+id/txt_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='"Username"'
        android:textSize="30sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_location_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="...loading Location" />

</RelativeLayout>
